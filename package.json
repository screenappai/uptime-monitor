{
  "name": "uptime-monitor",
  "version": "1.0.1",
  "description": "Open-source uptime monitoring system built with Next.js",
  "private": false,
  "scripts": {
    "dev": "next dev -p 3200",
    "build": "next build",
    "start": "next start -p 3200",
    "lint": "next lint",
    "migrate": "tsx scripts/migrate-to-multi-tenant.ts",
    "deploy:lambda": "dotenv -e .env.lambda -- serverless deploy --stage production --force",
    "deploy:lambda:dev": "serverless deploy --stage dev",
    "deploy:lambda:function": "serverless deploy function -f --force",
    "invoke:cron": "serverless invoke -f monitorCron --stage production",
    "logs:cron": "serverless logs -f monitorCron --tail --stage production",
    "remove:lambda": "serverless remove --stage production",
    "offline": "serverless offline"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "dotenv": "^16.6.1",
    "firebase-admin": "^13.6.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.294.0",
    "mongoose": "^8.0.0",
    "next": "^15.0.0",
    "next-auth": "^4.24.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.10.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.3.4",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.56.1",
    "serverless-offline": "^13.3.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5"
  },
  "keywords": [
    "uptime",
    "monitoring",
    "status-page",
    "nextjs",
    "opensource"
  ],
  "author": "ScreenApp <dilushan@screenapp.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/screenappai/uptime-monitor.git"
  },
  "homepage": "https://github.com/screenappai/uptime-monitor#readme",
  "bugs": {
    "url": "https://github.com/screenappai/uptime-monitor/issues"
  }
}
